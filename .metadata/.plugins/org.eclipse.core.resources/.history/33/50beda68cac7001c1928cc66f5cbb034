package linkedlist;

public class SinglyLinkedList {
	
	class Node
	{
		int data;
		Node next;
		
		
		
		public Node(int data) {
			super();
			this.data = data;
			this.next = null;
		}
	}
	
	
		Node head;
		
		void insert(int element)
		{
			Node newNode = new Node(element);
			if(head==null)
			{
				head=newNode;
			}
			else
			{
				Node iterator=head;
				while(iterator.next!=null)
				{
					iterator=iterator.next;
				}
				iterator.next=newNode;
			}
		}
		
		
		boolean delete(int element)
		{
			Node before;
			Node after;
			if(head.data==element)
			{
				head=null;
			    return true;
			}
			else
			{
				before=head;
				after=before.next.next;
			  while(after.next!=null && before.data==element)
			  {
				  if(before.next.data==element)
				  {
					  before.next=after;
					  return true;
				  }
				  
			  }
			}
			return false;
			
			
		}
		
		void printList()
		{
			Node iterator = head;
			while(iterator.next!=null)
			{
				System.out.println(iterator.data);
				iterator=iterator.next;
			}
		}
		
}
